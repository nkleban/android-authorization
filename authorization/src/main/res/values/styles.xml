<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AuthTheme.EditText" parent="@android:style/Widget.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AuthTheme.EditText.Email" parent="AuthTheme.EditText">
        <item name="android:hint">@string/hint_email</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:nextFocusDown">@id/edt_password</item>
        <item name="android:nextFocusForward">@id/edt_password</item>
    </style>

    <style name="AuthTheme.EditText.Password" parent="AuthTheme.EditText">
        <item name="android:hint">@string/hint_password</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AuthTheme.Button.Login" parent="@android:style/Widget.Button">
        <item name="android:id">@+id/btn_login</item>
        <item name="android:text">@string/text_login</item>
    </style>

</resources>